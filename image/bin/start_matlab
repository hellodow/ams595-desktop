#!/bin/bash

if [ -z "$MATLAB_VERSION" ];
then
    exit
fi

# Download MATLAB
xterm -e $HOME/bin/download_matlab

# Activate MATLAB
mkdir -p $HOME/.matlab/$MATLAB_VERSION
ln -s -f $HOME/.config/matlab/matlab.prf $HOME/.matlab/$MATLAB_VERSION

HOSTID=$(ifconfig eth0 | grep HWaddr | perl -pe "s/.+HWaddr ([\w:]+)/\$1/g ; s/://g")

if [[ -z "$(ls /usr/local/MATLAB/$MATLAB_VERSION/licenses)" || \
      -z "$(grep -q $HOSTID /usr/local/MATLAB/$MATLAB_VERSION/licenses/*)" ]];
then
    /usr/local/MATLAB/$MATLAB_VERSION/bin/activate_matlab.sh
fi

 # Start MATLAB
matlab -softwareopengl -desktop
